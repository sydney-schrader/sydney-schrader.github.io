
function sharethisitem_click(socialsite) {
    u = location.href;
    t = document.title;

    switch(socialsite)
    {
    case 'facebook':
      window.open('http://www.facebook.com/sharer.php?u=' + encodeURIComponent(u) + '&t=' + encodeURIComponent(t), 'sharer', 'toolbar=0,status=0,width=626,height=436');
      break;
    case 'twitter':
        window.open('https://twitter.com/share?url=' + encodeURIComponent(u), '&text=' + encodeURIComponent(t), 'sharer', 'toolbar=0,status=0,width=626,height=436');
      break;
    case 'linkedin':
        window.open('http://www.linkedin.com/shareArticle?mini=true&url=' + encodeURIComponent(u) + '&title=' + encodeURIComponent(t), 'sharer', 'toolbar=0,status=0,width=626,height=436');
        break;
    case 'e-mail':
        window.open('mailto:?mini=true&body=' + encodeURIComponent(u) + '&subject=' + encodeURIComponent(t), 'sharer', 'toolbar=0,status=0,width=626,height=436');
        break;
    }

    return false;
}

function PositionToolPane()
{
    var $scrollingDiv = jQuery("#MSOTlPn_Tbl");
    var SetToolpane = true;

    if ($scrollingDiv.length > 0) {
        $('#s4-workspace').scroll(function () {
            if (SetToolpane) {
                $scrollingDiv.stop().animate({ "marginTop": (jQuery('#s4-workspace').scrollTop() + 1) + "px" }, "slow");
                SetToolpane = false;
            }
        });
    }
}


function SetTinyScrollbars() {

    if ($('.scrollbar1') != null) {
        $('.scrollbar1').tinyscrollbar();
        var oScrollbar = $('.scrollbar1');

        if (oScrollbar[0]) {
            oScrollbar.tinyscrollbar_update();
        }
    }
}


function ResizeTitle() {

    if (jQuery('.jtextfill') != null) {
        jQuery('.jtextfill').textfill({ maxFontPixels: 48, innerTag: 'span' });

        jQuery('#dyntext').keyup(function () {
            jQuery('.dyntextval').html(this.value);
            jQuery('.jtextfill').textfill({ maxFontPixels: 42 });
        });

        console.log("Good");
    } else {
        console.log("bad");
    }
}

function ResizeDynamicTitle() {
    jQuery('.jtextfill').textfill({ maxFontPixels: 1 });
    jQuery('.jtextfill').textfill({ maxFontPixels: 48 });
}

jQuery(window).resize(function () {
    ResizeDynamicTitle();
});
